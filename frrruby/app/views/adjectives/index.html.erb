<p id="notice"><%= notice %></p>

<h1>Adjectives</h1>

<table>
  <thead>
    <tr>
      <th>Base</th>
      <th>Fem singular</th>
      <th>Masc plural</th>
      <th>Fem plural</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adjectives.each do |adjective| %>
      <tr>
        <td><%= adjective.base %></td>
        <td><%= adjective.fem_singular %></td>
        <td><%= adjective.masc_plural %></td>
        <td><%= adjective.fem_plural %></td>
        <td><%= link_to 'Show', adjective %></td>
        <td><%= link_to 'Edit', edit_adjective_path(adjective) %></td>
        <td><%= link_to 'Destroy', adjective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

